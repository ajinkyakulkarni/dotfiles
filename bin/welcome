#!/bin/bash

cookie[0]="you get the work you finish"
cookie[1]="construct the environment you need. all of it"
cookie[2]="make it work / understand it. make it beautiful. make it fast."

index=$(expr $RANDOM % 3)
fortune=${cookie[$index]}
hrs=$(hrs)
bin=$(which gecho >/dev/null && printf gecho || printf echo)

$bin -n -e  "\e[00;34m$(load) \e[00;91m$hrs \e[00;34m$fortune\n"

