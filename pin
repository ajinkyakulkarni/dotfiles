#!/bin/bash

set -e

# link dotfiles
ln -sfv $(echo $(pwd)/.[^.]* | xargs -n1 | grep -v '\.git$' | xargs) ~

# scala - sbt
mkdir -p ~/.sbt/plugins
ln -svf $(pwd)/boot.sbt ~/.sbt/plugins

# link binaries
mkdir -p ~/bin
ln -sfv $(pwd)/bin/* ~/bin

# link services
mkdir -p ~/service
ln -sfv $(pwd)/service/* ~/service

